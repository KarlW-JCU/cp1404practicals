BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: "Clear"
            font_size: 40
            size_hint_x: 0.2
            on_press: app.handle_clear()
        TextInput:
            id: input_name
            text: ""
            font_size: 40
            size_hint_x: 0.8
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: "Greet"
            font_size: 40
            size_hint_x: 0.2
            on_press: app.handle_greet()
        Label:
            id: output_label
            text: "What is your name?"
            font_size: 40
            size_hint_x: 0.8
            color: (1, 1, 0, 1)
